<div class="container">
  <ul>
  	<a id="due-today"><li>Due Today</li></a>
  	<a id="due-this-week"><li>Due This Week</li></a>
  	<a id="completed-all"><li>All completed tasks</li></a>
  	<a id="show-progress"><li>Today's Progress</li></a>
  	<a id="show-week-progress"><li>All Tasks Progress This Week</li></a>
  	<a id="show-all-progress"><li>Progress Overall</li></a>
  	<a id="show-progress-each-day-of-month"><li>Progress of each day</li></a>
  	<a href="/tasks/new"><li>New Task</li></a>
	<form method="post" action="/save">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<input type="submit" value="Save Today's Progress">
    </form>



  </ul>
	<h1 class="text-center"><%=current_user.username%>'s Tasks</h1>
  <div class="task-render">
	<div class="row tasks">
		<% if current_user.tasks %>
			<% current_user.tasks.each do |task| %>
				<div id="task-window-<%= task.id %>" class="col-md-4 task-container text-center">
				   <div id="task-<%= task.id %>">
			 		<p><h2><%=task.name %></h2></p>
					<p>Due Date: <%=task.due_dates.last.date.strftime('%x')%></p>
					<p>Description : <%=task.description%></p> 
					<p>Term : <%=task.term%></p> 
					<p>Completion Unit : <%=task.completion_unit%></p> 
					<% if task.completions.any? %>
						<p>
						  <% if task.completions.last.completed == 0 %>
						  Completed: No!
						  <% else %>
						  Completed: Yes! Congrats.
						  <% end %>
						</p>
						<p>Completion Value(how complete): <%=task.completions.last.completion_value%></p>
						<p>Completion Max(how much we need to complete): <%=task.completion_max%></p>
						<p>Completion Unit(how we measure): <%=task.completion_unit%></p>
						<a id="<%= task.id %>" class="btn-primary complete">U COMPLETE ME</a>
						<!-- slide scale input -->
						<form method="post" action="/updatecompletion/<%= task.id %>">
							<input data="<%=task.completions.last.completion_value%>"  class="slider" name="task[completion_value]" type="range" min="0" max="<%= task.completion_max%>" value="0" step="1"  />
							<span class="range"><%=task.completions.last.completion_value%></span>
							<input name="_method" type="hidden" value="put" />
							<input type="submit" value="submit">
						    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
						</form>
						<!-- slide scale input above -->
					<% else %>
						<h1>This task has no completion Data.</h1>
					<% end %>
				  </div>
				</div>	
			<% end %>
		<% else %>
			<h1>Looks like you haven't created any tasks, create one <a href="/tasks/new">here</a></h1>
		<% end  %>
	   </div>
	</div>
</div>