<div class="text-center">
<h1 class="signup">Welcome to Da</h1>
	<%= form_for(@user) do |f| %>
		<%= f.label :username  %>
		<%= f.text_field :username  %>
		<%= f.label :email  %>
		<%= f.text_field :email  %>
		<%= f.label :password %>
		<%= f.text_field :password %>
		<%= f.submit "join us" %>
	<% end %>

	<p>Already have an account?<p> <a href="/login">Log in here</a>
</div>